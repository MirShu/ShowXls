<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/china_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/china_number_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:layout_toLeftOf="@id/china_number_enter"
            android:text="+86"
            android:textSize="16.0sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/taiwan_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国台湾"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/taiwan_number_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:layout_toLeftOf="@id/taiwan_number_enter"
            android:text="+886"
            android:textSize="16.0sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/hongkong_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国香港"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/hongkong_number_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:layout_toLeftOf="@id/hongkong_number_enter"
            android:text="+852"
            android:textSize="16.0sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/macao_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国澳门"
            android:textSize="16.0sp" />

    </RelativeLayout>
</LinearLayout>